<% provide(:title, "Top") %>
<div class="row">
  <div class="container">
    <div class="jumbotron col-md-7">
      <h1 class="top-title">TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      <%= link_to "アカウント作成", '#', class: "btn btn-lg btn-success" %>
      <div class="login-btn">
        <%= link_to "ゲストログイン（管理権限)", '#', class: "btn btn-md btn-danger" %>
        <%= link_to "ゲストログイン（一般権限)", '#', class: "btn btn-md btn-warning" %>
      </div>
    </div>
    <div class="col-md-4">
      <h1 class="login-title">ログイン</h1>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      
        <%= f.label :メールアドレス, class: "label-login" %>
        <%= f.email_field :email, class: "form-control" %>
        
        <%= f.label :パスワード, class: "label-login" %>
        <%= f.password_field :password, class: "form-control" %>
        
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
    </div>
  </div>  
</div>